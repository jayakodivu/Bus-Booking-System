char b_payment(int seats)
{
    char destination[100][100]={"Anuradhapura-kandy","Anuradhapura-kaluthara","Anuradhapura-colombo","Anuradhapura-Galle","Anuradhapura-Jafffna","Anuradhapura-Dambulla","Anuradhapura-Mathale","Anuradhapura-Wariyapola","Anuradhapura-Gampaha","Anuradhapura-Kurunagala","Anuradhapura-giriulla","Anuradhapura-Malabe","Anuradhapura-wadduwa","Anuradhapura-Wauniya","Anuradhapura-Kilinochchi"};
	int cps[20]={400,150,250,550,250,300,350,200,750,250,350,300,350,150,250};
	int num=0;
	int amount=0;
    printf("\n %d ,seats from Anuradhapura to ?",seats);
    printf("\n1.kandy\n2.kaluthara\n3.colombo\n4.Galle\n5.Jafffna\n6.Dambulla \n7.Mathale \n8.Wariyapola \n9.Gampaha \n10.Kurunagala \n11.giriulla \n12.Malabe \n13.wadduwa \n14.Wauniya \n15.Kilinochchi");
    printf("\nEnter your destination : \n");
    scanf("%d",&num);

    if(num==1)
    {
        printf("\n %s",destination[num-1]);
        printf("\ncost per sheet is %d\n",cps[num-1]);
        amount=seats*cps[num-1];
        printf("\namount is %d\n",amount);
